<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	
	<xsd:include schemaLocation="opencms://opencms-xmlcontent.xsd"/>
	<xsd:include schemaLocation="opencms://system/modules/com.alkacon.opencms.calendar/schemas/entrylink.xsd"/>
		
	<xsd:element name="AlkaconCalendarDates" type="OpenCmsAlkaconCalendarDates"/>
	
	<xsd:complexType name="OpenCmsAlkaconCalendarDates">
		<xsd:sequence>
			<xsd:element name="AlkaconCalendarDate" type="OpenCmsAlkaconCalendarDate" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="OpenCmsAlkaconCalendarDate">
		<xsd:sequence>
			<xsd:element name="Title" type="OpenCmsString" />
			<xsd:element name="Teaser" type="OpenCmsString" />
			<xsd:element name="Text" type="OpenCmsHtml" />
			<xsd:element name="Location" type="OpenCmsString" />
			<xsd:element name="Links" type="OpenCmsAlkaconCalendarLink" minOccurs="0" />
			<xsd:element name="Showtime" type="OpenCmsBoolean" />
			<xsd:element name="Date" type="OpenCmsDateTime" />
			<xsd:element name="End" type="OpenCmsDateTime" minOccurs="0" />
		</xsd:sequence>
		<xsd:attribute name="language" type="OpenCmsLocale" use="required"/>
	</xsd:complexType>

	<xsd:annotation>
		<xsd:appinfo>
			<resourcebundle name="com.alkacon.opencms.calendar.workplace"/>
			<preview uri="%(previewtempfile)" />
			<defaults>
			        <default element="Title" value="New calendar entry" />
				<default element="Teaser" value="Please edit the calendar entry teaser." />
				<default element="Text" value="Please edit the calendar entry text." />
				<default element="Showtime" value="true" />
			</defaults>
			<layouts>
				<layout element="Teaser" widget="TextareaWidget" configuration="3" />
				<layout element="Text" widget="HtmlWidget" configuration="formatselect,anchor,link,image,table,downloadgallery,imagegallery" />
			</layouts>
			<mappings>
				<mapping element="Title" mapto="property:Title" />
				<mapping element="Teaser" mapto="property:Description" />
				<mapping element="Showtime" mapto="property:calendar.showtime" />
				<mapping element="Date" mapto="property:calendar.startdate" />
				<mapping element="End" mapto="property:calendar.enddate" />
				<!-- Enables nice url name for detail pages -->
				<mapping element="Title" mapto="urlName" />				
			</mappings>
			<validationrules/>
			<formatters>				
				<formatter uri="/system/modules/com.alkacon.opencms.calendar/formatters/formatter-entry.jsp" searchcontent="false"/>							
			</formatters>			
		</xsd:appinfo>

	</xsd:annotation>  
</xsd:schema>